# Telegram API credentials
API_ID=your_api_id_here
API_HASH=your_api_hash_here
PHONE=your_phone_number_here
AUTH_CODE=your_auth_code_here

# Bot Token (получите у @BotFather)
BOT_TOKEN=your_bot_token_here

# Database configuration
# SQLite (по умолчанию)
DATABASE_URL=sqlite:///./data/telethon_bot.db

# PostgreSQL (Supabase) - раскомментируйте и настройте:
# DATABASE_URL=postgresql://postgres:your_password@localhost:5432/postgres?sslmode=require
# Или для Supabase Cloud:
# DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres?sslmode=require

# Parser settings
PARSER_INTERVAL_MINUTES=30
MAX_POSTS_PER_CHANNEL=50

# Server settings
HOST=0.0.0.0
PORT=8010

# Docker settings
# Для запуска в Docker оставьте настройки по умолчанию 